{
    "editor.fontFamily": "RictyDiminished-Regular",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 11,
    "editor.wordWrap": "on",
    "window.zoomLevel": 0,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "Fastfile": "ruby"
    },

    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.smartcase": true,
    "vim.visualstar": true,
    "vim.leader": "<space>",
    "vim.easymotion": true,
    "vim.easymotionKeys": "sdfghjkl",
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.normalModeKeyBindings": [
        { "before": [";"], "after": [":"] },
        { "before": [":"], "after": [";"] },
        { "before": ["<Space>","h"], "after": ["0"] },
        { "before": ["<Space>","l"], "after": ["$"] },
        { "before": ["<Space>","k"], "after": ["H"] },
        { "before": ["<Space>","j"], "after": ["L"] },
        { "before": ["<C-h>"], "after": ["g","T"] },
        { "before": ["<C-l>"], "after": ["g","t"] },
        { "before": ["n"], "after": ["n", "z", "z"] },
        { "before": ["N"], "after": ["N", "z", "z"] },
        { "before": ["*"], "after": ["*", "z", "z"] },
        { "before": ["#"], "after": ["#", "z", "z"] },
        { "before": ["g", "*"], "after": ["g", "*", "z", "z"] },
        { "before": ["g", "#"], "after": ["g", "#", "z", "z"] }
    ],
    "vim.visualModeKeyBindings": [
        { "before": ["<Space>","h"], "after": ["0"] },
        { "before": ["<Space>","l"], "after": ["$"] },
        { "before": ["<Space>","k"], "after": ["H"] },
        { "before": ["<Space>","j"], "after": ["L"] }
    ],
    "vim.insertModeKeyBindings": [
        { "before": ["j","j"], "after": ["<Esc>"] },
        { "before": ["<C-j>"], "after": ["<Down>"] },
        { "before": ["<C-k>"], "after": ["<Up>"] },
        { "before": ["<C-h>"], "after": ["<Left>"] },
        { "before": ["<C-l>"], "after": ["<Right>"] }
    ],

    "eslint.enable": true,
    "eslint.run": "onSave",
    "eslint.autoFixOnSave": true,
    "tslint.enable": true,
    "tslint.run": "onSave",
    "tslint.autoFixOnSave": true,
    "markdown-pdf.styles": [
        "~/.config/vscode-markdown-github.css"
    ],
    "explorer.confirmDragAndDrop": false,

    "ruby.intellisense": "rubyLocate",
    "ruby.useLanguageServer": true,
    "python.jediEnabled": false
}
